<section class="speakers wrapper">
  <h3 class="title">Palestrantes</h3>

  <div class="speakers__container">

    <% data.speakers.people.each do |speaker| %>
      <article class="speakers__speaker">
        <div class="speakers__photo">
          <div class="speakers__social">
            <% if speaker.social.facebook %>
              <a href="//facebook.com/<%= speaker.social.facebook %>" target="_blank" title="Facebook" class="speakers__social__media">
                <%= partial 'partials/svg/speaker/facebook' %>
              </a>
            <% end %>

            <% if speaker.social.twitter %>
              <a href="//twitter.com/<%= speaker.social.twitter %>" target="_blank" title="Twitter" class="speakers__social__media">
                <%= partial 'partials/svg/speaker/twitter' %>
              </a>
            <% end %>

            <% if speaker.social.linkedin %>
              <a href="//linkedin.com/in/<%= speaker.social.linkedin %>" target="_blank" title="Linkedin" class="speakers__social__media">
                <%= partial 'partials/svg/speaker/linkedin' %>
              </a>
            <% end %>

            <% if speaker.social.github %>
              <a href="//github.com/<%= speaker.social.github %>" target="_blank" title="GitHub" class="speakers__social__media">
                <%= partial 'partials/svg/speaker/github' %>
              </a>
            <% end %>
          </div>

          <figure>
            <%= image_tag speaker.picture, alt: speaker.name %>
          </figure>
        </div>

        <div class="speakers__description">
          <h4 class="speakers__description__name">
            <%= speaker.name %>
          </h4>
          <span class="speakers__description__role">
            <%= speaker.company.rule %>
            na
            <a href="<%= speaker.company.link %>" target="_blank" title="<%= speaker.company.name %>">
              <%= speaker.company.name %>
            </a>
          </span>
          <p class="speakers__description__subject">
            <%= speaker.resume %>
          </p>
        </div>
      </article>
    <% end %>

  </div>
</section>

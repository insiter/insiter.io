<section class="speakers">
  <h3 class="title">Speakers</h3>

  <div class="speakers__container">

    <% data.speakers.people.each do |speaker| %>
      <div class="speakers__speaker">
        <div class="speakers__photo">
          <div class="speakers__social">
            <% if speaker.social.facebook %>
              <a href="//facebook.com/<%= speaker.social.facebook %>" rel="external" title="Facebook" class="speakers__social__media">
                <%= partial 'partials/svg/speaker/facebook' %>
              </a>
            <% end %>

            <% if speaker.social.twitter %>
              <a href="//twitter.com/<%= speaker.social.twitter %>" rel="external" title="Twitter" class="speakers__social__media">
                <%= partial 'partials/svg/speaker/twitter' %>
              </a>
            <% end %>

            <% if speaker.social.linkedin %>
              <a href="//linkedin.com/in/<%= speaker.social.linkedin %>" rel="external" title="Linkedin" class="speakers__social__media">
                <%= partial 'partials/svg/speaker/linkedin' %>
              </a>
            <% end %>

            <% if speaker.social.github %>
              <a href="//github.com/<%= speaker.social.github %>" rel="external" title="GitHub" class="speakers__social__media">
                <%= partial 'partials/svg/speaker/github' %>
              </a>
            <% end %>
          </div>

          <figure>
            <img src="<%= speaker.picture %>" alt="<%= speaker.name %>">
          </figure>
        </div>

        <div class="speakers__description">
          <h4 class="speakers__description__name">
            <%= speaker.name %>
          </h4>
          <span class="speakers__description__role">
            <%= speaker.company.rule %>
            at
            <a href="<%= speaker.company.url %>" rel="external">
              <%= speaker.company.name %>
            </a>
          </span>
          <p class="speakers__description__subject">
            <%= speaker.resume %>
          </p>
        </div>
      </div>
    <% end %>

  </div>
</section>
